        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可输入最多10个字符，字符数越少传输的精度越高。" />
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/playTextTips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="播放内容：" />

        <EditText
            android:id="@+id/playText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="10"
            android:text="0123456789" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="识别内容：" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recognizeText"/>

    </LinearLayout>

    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
    <Button
        android:id="@+id/voicePlay"
        android:text="播放"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


	<TextView
	android:layout_width="wrap_content"
